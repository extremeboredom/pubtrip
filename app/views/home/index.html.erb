<div class="hero-unit">
	<h1>Hello!</h1>
	<p>
		Welcome to Pubtrip. Take a look around, join in on a trip or organise your own!
	</p>
	<p>
		<%= link_to("Organise a Pubtrip", 
					new_trip_path, 
					:class => "btn btn-primary btn-large") %>
	</p>
</div>
<h2>Upcoming Pub Trips</h2>
<hr />
<% if @trips.empty? %>
	<p class="lead">Sorry, there's no trips planned right now. Maybe you should organise one?</p>
<% else %>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Why?</th>
	      <th>Where?</th>
	      <th>When?</th>
	      <th>Who?</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @trips.each do |trip| %>
	      <tr>
	        <td>
	        	<%= link_to trip.name, trip_path(trip) %>
	        </td>
	        <td>
	        	<%= trip.pub.name %>
	        </td>
	        <td>
	        	<%= distance_of_time_in_words_to_now trip.date %>
	        </td>
	        <td>
	        	<%= "#{trip.attendees.count} #{'person'.pluralize(trip.attendees.count)}" %>
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>