<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @trip.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @trip.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pub) %>:</strong></dt>
  <dd><%= @trip.pub.name %></dd>
</dl>

<table class="table">
  <% @trip.attendees.each do |attendee| %>
    <tr>
      <td><%= attendee.user.email %></td>
    </tr>
  <% end %>
</table>

<div class="form-actions">
  <% unless @trip.users.include? current_user %>
    <%= link_to 'Attend', 
                trip_attendees_path(@trip), 
                :method => :post, 
                :class => 'btn' %>
  <% end %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
